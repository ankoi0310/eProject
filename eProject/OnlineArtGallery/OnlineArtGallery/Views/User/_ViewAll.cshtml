@using Newtonsoft.Json;
@using Microsoft.AspNetCore.Http;

@model IEnumerable<OnlineArtGallery.Models.User>

@{
    if (Context.Session.GetString("USER") != null)
    {
        ViewBag.USER = JsonConvert.DeserializeObject(Context.Session.GetString("USER"));
    }
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table id="user" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                User ID
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                Password
                            </th>
                            <th>
                                User Type
                            </th>
                            <th>
                                Active
                            </th>
                            <th>
                                <a onclick="showInPopup('@Url.Action("AddOrEdit", "User", null, Context.Request.Scheme)', 'New User')" class="btn btn-success btn-block"><i class="fas fa-plus"></i></a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            ViewBag.Active = item.Active ? "True" : "False";
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Username
                                </td>
                                <td>
                                    @item.Password
                                </td>
                                <td>
                                    @Tools.GetUsetType(item.UsertypeId)
                                </td>
                                <td class="text-center">@ViewBag.Active</td>
                                <td>
                                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "User", new { item.Id }, Context.Request.Scheme)', 'Update User')" class="btn btn-info">@*<i class="fas fa-pencil-alt"></i>*@ Edit</a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                                        <input type="submit" value="Delete" class="btn btn-danger"
                                            @if (item.UsertypeId == 1) { ViewBag.checkAdmin = "disabled"; } else { ViewBag.checkAdmin = ""; }
                                            @ViewBag.checkAdmin
                                        />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>