@model OnlineArtGallery.Models.Exhibition

@{
    Layout = null;
    var now = DateTime.Now;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" method="post" enctype="multipart/form-data" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this)" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeginDay" class="control-label"></label>
                @if (Model.Id == 0)
                {
                    <input asp-for="BeginDay" type="date" class="form-control" placeholder="dd/MM/yyyy" value="@now.ToShortDateString()" />
                }
                else
                {
                    <input asp-for="BeginDay" type="date" class="form-control" placeholder="dd/MM/yyyy" />
                }
                <span asp-validation-for="BeginDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDay" class="control-label"></label>
                @if (Model.Id == 0)
                {
                    <input asp-for="EndDay" type="date" class="form-control" placeholder="dd/MM/yyyy" value="@now.ToShortDateString()" />
                }
                else
                {
                    <input asp-for="EndDay" type="date" class="form-control" placeholder="dd/MM/yyyy" />
                }
                <span asp-validation-for="EndDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Locate" class="control-label"></label>
                <input asp-for="Locate" class="form-control" />
                <span asp-validation-for="Locate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileImage" class="control-label"></label>
                <input asp-for="FileImage" class="form-control" type="file" name="FileImage" />
                <span asp-validation-for="FileImage" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Image" value="@Model.Image" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /><label asp-for="Active" class="control-label"></label>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<script>
    $('#select-user-type').on('change', function () {
        $('#user-type').val($('#select-user-type').val());
    });
    $('#select-user-type').val($('#user-type').val());
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}