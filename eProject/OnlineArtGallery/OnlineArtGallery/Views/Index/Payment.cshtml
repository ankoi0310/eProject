@{Layout = "~/Views/UserLayout/MainLayout.cshtml";
    User User = null;
    if (ViewBag.User != null)
    {
        User = ViewBag.User;
    }
}
<!--============= Hero Section Starts Here =============-->
<div class="hero-section">
    <div class="container">
        <ul class="breadcrumb">
            <li>
                <a href="index.html">Home</a>
            </li>
            <li>
                <span>Payment</span>
            </li>
            <li>
            </li>
        </ul>
    </div>
    <div class="bg_img hero-bg bottom_center" data-background='@Url.Content("~/assetsIndex/images/banner/hero-bg.png")'></div>
</div>
<section class="contact-section padding-bottom">
    <div class="container">
        <div class="contact-wrapper padding-top padding-bottom mt--100 mt-lg--440">
            <div class="section-header">
                <h2 class="title">Payment</h2>
                <p>We'd love to hear from you! Let us know how we can help.</p>
                <div class="alert alert-danger d-none" role="alert" id="alertBoxBid" aria-hidden="true">
                    This is a info alert—check it out!
                </div>
                @*<div>
                    <button class="custom-button" id="close">×</button>
                </div>*@
            </div>
            <div class="row">
                <div class="col-md-7">
                    <form action="" method="POST" style="color:black" id="purchase">
                        <b>1. Personal Information</b>
                        <div class="row">
                            <div class="col">
                                <label for="FirstName"> First Name</label>
                                <input type="text" class="form-control" name="name" value="" id="FirstName" required />
                                @if (User != null)
                                {
                                    <input type="hidden" id="usertypeId" value="@User.UsertypeId">
                                    <input type="hidden" id="userId" name="userId" value="@User.Id">
                                }
                            </div>
                            <div class="col">
                                <label for="LastName"> Last Name</label>
                                <input type="text" class="form-control" name="name" value="" id="LastName" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="Email"> Email</label>
                                <input type="text" class="form-control" name="name" value="" id="Email" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="Contry"> Contry</label>
                                <input type="text" class="form-control" name="name" value="" id="Contry" required />
                            </div>
                            <div class="col">
                                <label for="PostalCode"> Postal Code</label>
                                <input type="text" class="form-control" name="name" value="" id="PostalCode" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label for="PhoneNumber"> Phone Number</label>
                                <input type="text" class="form-control" name="name" value="" id="PhoneNumber" required />
                            </div>
                        </div>
                        <b>2. Paymen Detail</b>
                        <b>Choose the payment method</b>
                        <div class="row">
                            <div class="col">
                                <ul id="MenuMethod">
                                    <li class="active" data-id="0">
                                        <a href="#0">
                                            <i class="fa fa-cc-visa fa-lg" aria-hidden="true"></i>
                                            Visa/<i class="fa fa-credit-card fa-lg" aria-hidden="true"></i>
                                            Creadit Card
                                        </a>
                                    </li>
                                    <li data-id="1">
                                        <a href="#0">
                                            <i class="fa fa-cc-paypal fa-lg" aria-hidden="true"></i>
                                            PayPal
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="payment">
                            <div class="row">
                                <div class="col">
                                    <i class="fa fa-cc-visa"></i><label for="Visa"> Creditcard Number</label>
                                    <input type="text" class="form-control" name="name" value="" id="Visa" required />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <label for="SecurityCode"> Security Code</label>
                                    <input type="text" class="form-control" name="name" value="" id="SecurityCode" required />
                                </div>
                                <div class="col">
                                    <label for="ExpirationDate"> Expiration Date</label>
                                    <input type="text" class="form-control" name="name" value="" id="ExpirationDate" required />
                                </div>
                            </div>
                        </div>
                        <div class="payment">
                            <div class="row">
                                <div class="col">
                                    <i class="fa fa-user"></i><label for="User"> Creditcard Number</label>
                                    <input type="text" class="form-control" name="name" value="" id="User" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <label for="PassWord"><i class="fa fa-key"></i> PassWord</label>
                                    <input type="text" class="form-control" name="name" value="" id="PassWord" />
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="col-md-4" style="margin-top:50px;color:black">
                    <div class="row" style="border-style:double; border-color:gainsboro;">
                        <div class="col">
                            <div class="row" style="margin:15px">
                                <p style="font-weight:bold;font-size:100%;">YOUR ORDER</p>
                            </div>
                            <div style="border-bottom:solid 0.1px; border-color:gainsboro;height:auto" id="myOrder">

                            </div>
                            <div class="row" style="margin-top:15px">
                                <div class="col" style="text-align:center;font-weight:bold;">
                                    Total
                                </div>
                                <div class="col" style="text-align:center" id="totalPrice">

                                </div>
                            </div>
                            <div class="row" style="margin-top:15px">
                                <div class="col" style="text-align:center;font-weight:bold;">
                                    VATFee 10%:
                                </div>
                                <div class="col" style="text-align:center" id="Fee">

                                </div>
                            </div>
                            <div class="row" style="margin-top:15px">
                                <div class="col" style="text-align:center;font-weight:bold;">
                                    Total price :
                                </div>
                                <div class="col" style="text-align:center" id="totalPurchase">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12" style="text-align:center;margin:auto;margin-top:50px">
                    <button class="custom-button" id="btnPayment"><i class="fa fa-shopping-cart ">Complete Purchase</i></button>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script>
        $(".cart-button").css("display", "none");
        $(document).ready(function () {
            if (localStorage.getItem("cart") != null) {
                var x = JSON.parse(localStorage.getItem("cart"));
                var total = 0;
                var y = "";
                for (var i = 0; i < x.length; i++) {
                    y += `<div class="row">
                            <div class="col" style="text-align:left">
                               ${x[i]["name"]}
                             </div>
                             <div class="col" style="text-align:left">
                               ${x[i]["nameArtist"]}
                             </div>
                            <div class="col" style="text-align:left">
                                    $${x[i]["price"]}
                            </div>
                        </div>`
                    total += parseInt(x[i]["price"]);
                }
                $("#myOrder").html(y);
                $("#totalPrice").html("$" + total);
                $("#Fee").html("$" + Math.round(total * 10/100, 2))
                $("#totalPurchase").html("$" + Math.round(total*110/100,2))
            }
        })

        function checkEmpty() {
            if ($("#FirstName").val() == "" || $("#LastName").val() == "" || $("#Email").val() == "" || $("#Contry").val() == "" || $("#PostalCode").val() == "" || $("#PhoneNumber").val() == "" ) {
                
                return(false);
            }
            if ($("#MenuMethod .active").data("id") == 0) {
                if ($("#Visa").val() == "" || $("#SecurityCode").val() == "" || $("#ExpirationDate").val() == "" ) {
                    return(false);
                }
            }
            else {
                if ($("#User").val() == "" || $("#PassWord").val() == "" ) {
                    return (false);
                }
            }
        }

        $(document).ready(function () {
            $("#btnPayment").click(function (e) {

                var userTypeId = $("#usertypeId").val();
                if (userTypeId == null || userTypeId != 3) {
                    $("#alertBoxBid").html("You need to login/register as Customer to buy this Artwork ")
                    $("#alertBoxBid").append(`<button id="close">×</button>`);    
                    $("#alertBoxBid").removeClass("d-none");
                    return;
                }
                else {
                    if (JSON.parse(localStorage.getItem("cart")) == null) {
                        $("#alertBoxBid").html("Cart is empty! Buy somethings and comeback! ");
                        $("#alertBoxBid").append(`<button class="custom-button" id="close">×</button>`);    
                        $("#alertBoxBid").removeClass("d-none");
                        return;
                    }
                    if (checkEmpty() == false) {
                        $("#alertBoxBid").html("you need to fill all the field to preOrder ");
                        $("#alertBoxBid").append(`<button class="custom-button" id="close">×</button>`);    
                        $("#alertBoxBid").removeClass("d-none");
                        return;
                    } 
                    else {
                        var cart = localStorage.getItem("cart");
                        var Cartlist = JSON.parse(cart);
                        var IdUser =parseInt($("#userId").val());
                        var x = 0;
                        for (var i = 0; i < Cartlist.length; i++) {
                            x += parseInt(Cartlist[i]["price"]);
                        }
                        var TotalPrice = x;
                        var TotalFee = Math.round(x * 10 / 100, 2);
                        if ($("#MenuMethod .active").data("id") == 0) {
                            var PaymentId = 1;
                        }
                        else {
                           var PaymentId = 2;
                        }
                        var StatusId = 4;
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("PaymentSuccess", "Index")',
                            data: { cart: cart, IdUser: IdUser, TotalPrice: TotalPrice, TotalFee: TotalFee, PaymentId: PaymentId,StatusId:StatusId },
                            dataType: 'json',
                            success: function (smg) {
                                localStorage.removeItem("cart");
                                localStorage.removeItem("amount");
                                window.location.href = "http://localhost:13979/Index/Success";
                            }
                        })
                    }
                }
            })
        })
        $(document).ready(function () {
            $("body").on("click","#close", function () {
                $("#alertBoxBid").addClass("d-none");

            })
        })
    </script>
    }