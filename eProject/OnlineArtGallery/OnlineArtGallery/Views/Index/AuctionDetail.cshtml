@section Scripts{
    <script>
        $(document).ready(function () {
            //$("#bidPrice").on("change", function () {
            //    $("#alertBox").html($(this).val());
            //    $("#alertBox").removeClass("d-none");
            //});
            $("form").submit(function (e) {
                var userTypeId = $("#usertypeId").val();
                if (userTypeId == null || userTypeId != 3) {
                    $("#alertBox").html("You need to login/register as Customer to bid this Artwork");
                    $("#alertBox").removeClass("d-none");
                    e.preventDefault(e);
                } else {
                    var bidPrice = $("#bidPrice").val();
                    var currentBid = $("#currentBid").val();
                    var stepPrice = $("#stepPrice").val();
                    var bidDif = bidPrice - currentBid;
                    if (bidDif <= 0 || (bidDif % stepPrice != 0)) {
                        $("#alertBox").html("This bid need to larger current bid and follow to step price");
                        $("#alertBox").removeClass("d-none");
                        e.preventDefault(e);
                    }
                }
            });
        })

    </script>
